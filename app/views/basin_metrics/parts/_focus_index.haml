
%canvas(id="partsChart" width="1500px" height="1500px")

:javascript
  var dyn_width = $('.focus_pane').width() + 'px'
  $('canvas').attr('height', dyn_width);

  var dyn_height = $('.focus_pane').height() + 'px'
  $('canvas').attr('height', dyn_height);

  var ctx = $("#partsChart");
  var myChart = new Chart(ctx, {
    type: 'line',
    data: {
      labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sept', 'Oct', 'Nov', 'Dec'],
      datasets: [{
        label: "#{get_context} #{get_monthly_plug_quantities[:y_label]} by #{get_monthly_plug_quantities[:x_label]}",
        fill: true,
        data: #{get_monthly_plug_quantities[:array]},
        backgroundColor: "rgba(75, 192, 192, 0.2)",
        borderColor: #{get_border_colors},
        borderWidth: 1
      }]
    },
    options: {
      responsive: true,
      responsiveAnimationDuration: 1000,
      maintainAspectRatio: false,
      scaleFontColor: "#fff",
      scales: {
        xAxes: [{
          scaleLabel: {
            display: true,
            labelString: "#{get_monthly_plug_quantities[:x_label]}"
          },
          gridLines: {
            display: true,
          },
          ticks: {
            beginAtZero:true,
            fontColor: "#9faeaf"
          }
        }],
        yAxes: [{
            scaleLabel: {
            display: true,
            labelString: "#{get_monthly_plug_quantities[:y_label]}"
          },
          ticks: {
            beginAtZero:true,
            fontColor: "#9faeaf"
          }
        }]
      }
    }
  });