//Prepare pane contents
var showRecordPartial = "<%= j(render partial: 'record_show', locals: { well: JSON.parse(@well) }) %>";

var record_pane = $('.record_pane');

//Fill pane contents
record_pane.html(showRecordPartial);

//Animate exit/entry
if (record_pane.hasClass('showing')) {
  record_pane.animate({right: '-25%'},{duration: 200, easing: "easeInExpo"});
  record_pane.removeClass('showing');
} else {
  record_pane.animate({right: 0},{duration: 300, easing: "easeOutExpo"});
  record_pane.addClass('showing');
}

