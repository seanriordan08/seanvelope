//Prepare structure
var focusPartial = "<%= j(render partial: 'basin_metrics/dashboard/focus_pane') %>";
var listPartial = "<%= j(render partial: 'basin_metrics/dashboard/list_pane') %>";
var recordPartial = "<%= j(render partial: 'basin_metrics/dashboard/record_pane') %>";

//Prepare pane contents
var indexFocusPartial = "<%= j(render partial: 'focus_index', locals: { districts: JSON.parse(@districts) }) %>";
var indexListPartial = "<%= j(render partial: 'list_index', locals: { districts: JSON.parse(@districts) }) %>";

// Add structure
$('.main_pane').html(recordPartial).append(focusPartial).append(listPartial);

//Fill pane contents
$('.list_pane').html(indexListPartial);
$('.focus_pane').html(indexFocusPartial);

triggerNotification("<%=j(flash.now[:success])%>", "<%=j(flash.now[:error])%>");