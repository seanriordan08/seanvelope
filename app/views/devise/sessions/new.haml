.login
  %h2 Sandbox Log in
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .field
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, style: "background-color: #888; border-color: #777;"
    .field
      = f.label :password
      %br/
      = f.password_field :password, autocomplete: "off", style: "background-color: #888; border-color: #777;"
    - if devise_mapping.rememberable?
      .field
        = f.check_box :remember_me
        = f.label :remember_me
    .actions
      = link_to 'Cancel', root_path, style: "margin: 0 10px"
      = f.submit "Log in", style: "background-color: #888"

  -#= render "devise/shared/links"

:javascript
  $(document).ready(function(){
    $('body').css({backgroundImage: "url('../assets/dark_digital.png')"});
  })