var confirmation_success = "<%=j(flash.now[:success])%>";
var confirmation_error = "<%=j(flash.now[:error])%>";

if (confirmation_success != '') {
  $.notify({
    message: "<%=j(flash.now[:success])%>"
  },{
    type: 'success'
  });
}
if (confirmation_error != '') {
  $.notify({
    message: "<%=j(flash.now[:error])%>"
  },{
    type: 'danger'
  });
}