<div class="main">

	<table>
		<th>Title</th>
		<th>Body</th>
		<th>Rating</th>
		<th><th><th>

		<% @articles.each do |article| %>
			<tr>
				<td><%= article.title %></td>
				<td><%= article.body %></td>
				<td><%= article.rating %> Stars</td>
				<td><%= link_to("Show", article_path(article.id))%></td>
				<td><%= link_to("Edit", edit_article_path(article.id))%></td>
				<td><%= link_to "Delete", article, method: :delete, data: {confirm: 'Are you sure?'} %></td>
			</tr>
		<% end %>
	</table>

</div>
